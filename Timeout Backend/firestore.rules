rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for Clerk authentication
    function isAuthenticated() {
      return request.auth != null && 
             request.auth.token.clerk_user_id != null;
    }
    
    function getClerkUserId() {
      return request.auth.token.clerk_user_id;
    }
    
    function getUserRole() {
      return request.auth.token.role;
    }
    
    function isTeacher() {
      return getUserRole() == 'teacher';
    }
    
    // Users collection - Clerk user data sync
    match /users/{clerkUserId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      getClerkUserId() == clerkUserId;
    }
    
    // Study rooms collection
    match /studyRooms/{roomId} {
      allow read: if isAuthenticated() && (
        resource.data.visibility == 'public' || 
        getClerkUserId() in resource.data.members ||
        getClerkUserId() == resource.data.hostId
      );
      
      allow create: if isAuthenticated() && 
                       request.resource.data.hostId == getClerkUserId();
      
      allow update: if isAuthenticated() && (
        getClerkUserId() == resource.data.hostId ||
        // Members can join/leave
        (getClerkUserId() in resource.data.members && 
         request.resource.data.diff(resource.data).affectedKeys()
         .hasOnly(['members', 'updatedAt']))
      );
      
      allow delete: if isAuthenticated() && 
                       getClerkUserId() == resource.data.hostId;
    }
    
    // Sessions collection - analytics data
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Sessions are immutable once created (analytics data)
      allow update: if false;
      allow delete: if isAuthenticated() && isTeacher();
    }
    
    // Room chat messages (if implemented later)
    match /studyRooms/{roomId}/messages/{messageId} {
      allow read: if isAuthenticated() && 
                     getClerkUserId() in get(/databases/$(database)/documents/studyRooms/$(roomId)).data.members;
      allow create: if isAuthenticated() && 
                       getClerkUserId() in get(/databases/$(database)/documents/studyRooms/$(roomId)).data.members &&
                       request.resource.data.authorId == getClerkUserId();
      allow update, delete: if false; // Messages are immutable
    }
  }
}
